<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Content-Security-Policy" content="
        default-src 'self' https://cdnjs.cloudflare.com;
        font-src 'self' https://cdnjs.cloudflare.com https://fonts.gstatic.com https://ka-f.fontawesome.com;
        style-src 'self' https://cdnjs.cloudflare.com 'unsafe-inline';
        connect-src 'self' https://ka-f.fontawesome.com;">
    <title>@ViewData["Title"] - project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @* <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"> *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/project.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Header -->
    <header>
        <div class="container">
            <div class="header-top">
                <div class="logo">
                    <a asp-page="/Index" style="text-decoration: none;">
                        Shop<span>Easy</span>
                    </a>
                </div>
                <form method="get" asp-page-handler="Search">
                    <div class="search-bar">
                        <input type="text" placeholder="Search for products...">
                    </div>
                </form>
                <div class="header-actions d-flex align-items-center gap-3">
                    <a asp-page="/Auth/login" class="text-decoration-none text-dark fw-medium px-2 py-1 rounded hover-primary">
                        Account
                    </a>
                    <a asp-page="/Products/Create" class="text-decoration-none text-dark fw-medium px-2 py-1 rounded hover-primary">
                        Add Product
                    </a>
                    <a asp-page="/Customers/Cart/Index" asp-route-userId="@ViewData["UserId"]" class="text-decoration-none text-dark fw-medium px-2 py-1 rounded hover-primary position-relative">
                        Cart
                        <!-- Uncomment for cart count -->
                        <!-- <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">3</span> -->
                    </a>
                </div>
            </div>
            @* <nav>
                <ul class="nav-links">
                <li><a asp-page="/Index">Home</a></li>
                <li><a asp-page="/">Shop</a></li>
                <li><a asp-page="/">Categories</a></li>
                <li><a asp-page="/">Deals</a></li>
                <li><a asp-page="/">New Arrivals</a></li>
                <li><a asp-page="/">Brands</a></li>
                <li><a asp-page="/">About</a></li>
                <li><a asp-page="/">Contact</a></li>
                </ul>
                </nav> *@
        </div>
    </header>
    @* <main role="main"></main> *@

    @RenderBody()

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="footer-content">
                <div class="footer-column">
                    <h3>ShopEasy</h3>
                    <p>Your one-stop destination for all your shopping needs. Quality products at affordable prices.</p>
                    @* <div class="social-links">
                            <a href="https://www.linkedin.com/in/alireza-jafari-tech/"><i class="fab fa-facebook-f"></i></a>
                            <a href="https://www.linkedin.com/in/alireza-jafari-tech/"><i class="fab fa-twitter"></i></a>
                            <a href="https://www.linkedin.com/in/alireza-jafari-tech/"><i class="fab fa-instagram"></i></a>
                            <a href="https://www.linkedin.com/in/alireza-jafari-tech/"><i class="fab fa-pinterest"></i></a>
                        </div> *@
                </div>
                <div class="footer-column">
                    <h3>Quick Links</h3>
                    <ul class="footer-links">
                        <li><a href="/Index">Home</a></li>
                        <li><a href="/Index">Shop</a></li>
                        <li><a href="/Index">About Us</a></li>
                        <li><a href="/Index">Contact</a></li>
                        <li><a href="/Index">FAQ</a></li>
                    </ul>
                </div>
                <div class="footer-column">
                    <h3>Customer Service</h3>
                    <ul class="footer-links">
                        <li><a href="/Index">Shipping Policy</a></li>
                        <li><a href="/Index">Return Policy</a></li>
                        <li><a href="/Index">Privacy Policy</a></li>
                        <li><a href="/Index">Terms & Conditions</a></li>
                        <li><a href="/Index">Track Your Order</a></li>
                    </ul>
                </div>
                <div class="footer-column">
                    <h3>Contact Us</h3>
                    <ul class="footer-links">
                        <li><i class="fas fa-map-marker-alt"></i> 123 Commerce St, City, State 12345</li>
                        <li><i class="fas fa-phone"></i> +1 (555) 123-4567</li>
                        <li><i class="fas fa-envelope"></i> support@shopeasy.com</li>
                    </ul>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2025 ShopEasy. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>